[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p

[color]
	diff = auto
	branch = auto
	status = auto

[core]
	excludesfile = ~/.gitignore_global

[merge]
	ff = false

[rerere]
	enabled = 1

[user]
