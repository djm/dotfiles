[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
    recent = for-each-ref --sort=-committerdate --count=20 --format='%(refname:short)' refs/heads/

[color]
    diff = auto
    branch = auto
    status = auto

[core]
    excludesfile = ~/.gitignore
    editor = /usr/bin/vim
    autocrlf = input

[merge]
    ff = false

[rerere]
    enabled = 1

[user]
    name = Darian Moody
    email = mail@djm.org.uk
    # Not private, only used to decide
    # which key to select in GnuPG
    signingkey = 0E3657CF31B800F5

[github]
    user = djm

[hub]
    protocol = ssh

[push]
    default = simple

[commit]
    template = ~/.git_commit_msg.txt
    gpgsign = true
